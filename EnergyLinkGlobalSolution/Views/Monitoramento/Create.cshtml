@model EnergyLinkGlobalSolution.Models.Monitoramento

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Monitoramento - EnergyLink</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: "Poppins", sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        h2 {
            font-weight: 600;
            color: #006400;
        }

        label {
            font-weight: 600;
        }

        .btn-primary {
            background-color: #006400;
            border-color: #006400;
        }

        .btn-primary:hover {
            background-color: #004d00;
            border-color: #004d00;
        }

        .btn-secondary {
            color: #fff;
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Cadastro de Monitoramento</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="IdEntidade" class="form-label">Entidade</label>
                <input asp-for="IdEntidade" class="form-control" placeholder="Informe o ID da Entidade" />
                <span asp-validation-for="IdEntidade" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataMonitoramento" class="form-label">Data do Monitoramento</label>
                <input asp-for="DataMonitoramento" class="form-control" type="date" />
                <span asp-validation-for="DataMonitoramento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Energia" class="form-label">Valor da Energia</label>
                <input asp-for="Energia" class="form-control" placeholder="Informe o valor da energia" />
                <span asp-validation-for="Energia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoMonitoramento" class="form-label">Tipo de Monitoramento</label>
                <input asp-for="TipoMonitoramento" class="form-control" placeholder="Informe o tipo de monitoramento" />
                <span asp-validation-for="TipoMonitoramento" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
